{
  "name": "cesium-transform-gizmo",
  "version": "0.1.1",
  "description": "A high-performance visual transformation gizmo for CesiumJS models.",
  "type": "module",
  "main": "./dist/cesium-transform-gizmo.umd.js",
  "module": "./dist/cesium-transform-gizmo.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/cesium-transform-gizmo.es.js",
      "require": "./dist/cesium-transform-gizmo.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "pnpm run build:lib && vite --config vite.example.config.ts",
    "build": "pnpm run build:lib",
    "build:lib": "tsc && vite build --config vite.lib.config.ts && node ./scripts/add-banner.mjs",
    "build:example": "vite build --config vite.example.config.ts"
  },
  "peerDependencies": {
    "cesium": "^1.100.0"
  },
  "devDependencies": {
    "cesium": "^1.110.0",
    "sass": "^1.97.3",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0"
  },
  "keywords": [
    "cesium",
    "gizmo",
    "transform",
    "model",
    "3dtiles"
  ],
  "author": {
    "name": "Cyanfish",
    "url": "https://cyanfish.site"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bro-B/cesium-transform-gizmo"
  },
  "license": "Apache-2.0"
}