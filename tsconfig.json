{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false, // 允许 Vite 之外的工具输出文件
    "declaration": true, // 生成 .d.ts
    "skipLibCheck": true
  },
  "include": ["src"]
}